{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "interfaces/*": ["interfaces/*"],
      "services/*": ["services/*"],
      "auth/*": ["auth/*"]
    },
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "moduleResolution": "node",
    "target": "ES6",
    "module": "commonjs",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
